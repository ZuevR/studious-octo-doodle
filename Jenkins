pipeline {
    agent any

    environment {
        APP_ENV_NAME = $KANE_BRANCH
    }

    stages {
        stage('Prepare ENV') {
            steps {
                sh '''#!/bin/bash
                if [ -z ${tagToCreate} ]; then
                echo "tagToCreate field is missing, please check"
                exit 1
                fi

                echo "GIT_BRANCH=${KANE_BRANCH}" >> env-properties
                echo "BUILD_TYPE=${BUILD_TYPE}" >> env-properties
                '''
            }
        }
    }
}